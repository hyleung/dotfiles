# Sample gitconfig
#

[hub]
        protocol = https
[user]
        name = Ho Yan Leung
        email = hy.leung@gmail.com
	signingkey = hy.leung@gmail.com
[credential]
        helper = /opt/boxen/bin/boxen-git-credential
[alias]
        co = checkout
        count   = !git shortlog -sn
	    plog 	= log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
        cob = checkout -b
        wip = commit -am "WIP" 
        amend = commit -a --amend
        save = !git add -A && git commit -m 'SAVEPOINT'
        amend = commit -a --amend
        wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git 
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = /opt/boxen/config/git/gitignore
    	editor = vim
        pager = "diff-so-fancy | less --tabs=4 -RFX"
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[push]
        # See `git help config` (search for push.default)
        # for more information on different options of the below setting.
        #
        # Setting to git 2.0 default to suppress warning message
        default = simple

[color]
ui = true
branch = auto
